<interface type="bridge" startmode="onboot">
  <name>br0</name>
  <mtu size="1500"/>
  <protocol family="ipv4">
    <dhcp/>
  </protocol>
  <bridge stp="off">
    <interface type="ethernet">
      <name>eth0</name>
      <!-- FIXME: is it reasonable to alllow separate MTU's for bridge and
           enslaved if ? -->
      <mtu size="1492"/>
      <mac address="ab:bb:cc:dd:ee:ff"/>
    </interface>
    <interface type="ethernet">
      <name>eth1</name>
    </interface>
  </bridge>
</interface>
